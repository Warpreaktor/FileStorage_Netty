<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientSide.ExchangeController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <HBox>
         <children>
            <TextField fx:id="serverConsole" onAction="#consoleCommand" prefHeight="26.0" prefWidth="354.0" promptText="Server console" />
            <TextField fx:id="ipTextField" promptText="ip address" text="localhost" />
            <TextField fx:id="portTextField" promptText="port" />
            <Button fx:id="connectBut" mnemonicParsing="false" onAction="#connectButton" text="Connect" />
         </children>
      </HBox>
      <BorderPane>
         <right>
            <Button alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" text="&lt;--- Copy" BorderPane.alignment="CENTER" />
         </right>
         <left>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" text="Copy ---&gt;" />
               </children>
            </HBox>
         </left>
      </BorderPane>
      <SplitPane dividerPositions="0.5">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <TreeView fx:id="clientFileTree" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <contextMenu>
                        <ContextMenu fx:id="leftContextMenu">
                          <items>
                            <MenuItem fx:id="copyFileToServer" mnemonicParsing="false" text="Copy to server" />
                              <MenuItem fx:id="sendFileToServer" mnemonicParsing="false" text="Send to server" />
                              <MenuItem fx:id="createTxtFile" mnemonicParsing="false" text="Create txt" />
                              <MenuItem fx:id="createFolder" mnemonicParsing="false" text="Create folder" />
                              <MenuItem fx:id="deleteClientFile" mnemonicParsing="false" text="Delete" />
                          </items>
                        </ContextMenu>
                     </contextMenu></TreeView>
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0">
               <children>
                  <TreeView fx:id="serverFileTree" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                   <contextMenu>
                       <ContextMenu fx:id="rightContextMenu">
                           <items>
                               <MenuItem mnemonicParsing="false" text="Copy to client" />
                               <MenuItem mnemonicParsing="false" text="Send to client" />
                               <MenuItem mnemonicParsing="false" text="Create txt file" />
                               <MenuItem mnemonicParsing="false" text="Create directory" />
                           </items>
                       </ContextMenu>
                   </contextMenu></TreeView>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
  </children>
</VBox>
